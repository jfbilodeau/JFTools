extends ../layout

block content
    h2 Generate knowledge check
    form(action='/kc/units')
        p Course ID:&nbsp;
            input(name='courseId' placeholder='ex: az-204')
        if message
          p.error Error: #{message}
        p Locale:&nbsp;
            input(name='locale' value='en-us')
        p
            label(for='fieldRaw') Format:&nbsp;
            select(name='format' id='fieldRaw')
                option(value='html') HTML
                option(value='json') JSON
                option(value='klax') KlaxGen
        p
            button(type='submit') Submit

    small Please note: Generating a document may takes a few minutes. Please be patient.