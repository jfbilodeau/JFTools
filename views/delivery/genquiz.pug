extends ../layout

block head
    script(src='/js/jf/copy.js')

block content
    h2 Generate KlaxGen script
    p
        a(href="/delivery") Back to delivery
    form(method='get')
        p Describe your quiz:
        p
            textarea(name='description' autofocus rows='10' cols='80')=description
            br
        button(type='submit') Generate

    if script
        hr
        h3 KlaxGen script
        pre#script= script
        button(type='button' onclick='jf.copyElementToClipboard("script")') &#128203; Copy
        button(type='button' onclick='jf.downloadElement("script")') &#128194; Download
